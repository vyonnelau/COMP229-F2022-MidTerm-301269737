<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
          <div class="offset-md-3 col-md-6">
            <h1><%=title %></h1>
      
            <form class="form" method="post">
              <div class="from-group">
                <label for="carnameTextField">Car Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="carnameTextField"
                  placeholder="Enter the Car Name:"
                  name="Carname"
                />
              </div>
      
              <div class="from-group">
                <label for="priceTextField">Price Range</label>
                <input
                  type="text"
                  class="form-control"
                  id="priceTextField"
                  placeholder="Enter the Min Price:"
                  name="minprice"
                  required
                />
                <input
                  type="text"
                  class="form-control"
                  id="priceTextField"
                  placeholder="Enter the Max Price:"
                  name="maxprice"
                  required
                />
              </div>
      
              <button class="btn btn-primary" type="submit">
                <i class="fa fa-trash"></i> Delete
              </button>
      
              <a href="/cars" class="btn btn-warning">
                <i class="fa fa-undo"></i> Cancel
              </a>
            </form>
          </div>
        </div>
      </div>

