<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
          <div class="offset-md-3 col-md-6">
            <h1><%=title %></h1>
      
            <form class="form" method="post">
              <div class="from-group">
                <label for="carnameTextField">Car Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="carnameTextField"
                  placeholder="Enter the Car Name:"
                  name="Carname"
                  required
                />
              </div>
      
              <div class="from-group">
                <label for="categoryTextField">Category</label>
                <input
                  type="text"
                  class="form-control"
                  id="categoryTextField"
                  placeholder="Enter the Category:"
                  name="Category"
                  required
                />
              </div>
      
              <div class="from-group">
                <label for="carmodelTextField">Car Model:</label>
                <input
                  type="text"
                  class="form-control"
                  id="carmodelTextField"
                  placeholder="Enter the Car Model:"
                  name="Carmodel"
                  required
                />
              </div>

              <div class="from-group">
                <label for="priceTextField">Price</label>
                <input
                  type="text"
                  class="form-control"
                  id="priceTextField"
                  placeholder="Enter the Price:"
                  name="Price"
                  required
                />
              </div>
      
              <button class="btn btn-primary" type="submit">
                <i class="fa fa-check-square-o"></i>Submit
              </button>
      
              <a href="/cars" class="btn btn-warning">
                <i class="fa fa-undo"></i>Cancel
              </a>
            </form>
          </div>
        </div>
      </div>

<% include ../partials/footer.ejs %>